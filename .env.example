# Copy this file to `.env` and fill secrets before running the app

# Database configuration (used by src/config/db.php)
DB_HOST=db
DB_USER=user
DB_PASSWORD=your_db_password_here
DB_NAME=taskomania
DB_PORT=3306

# MySQL root and initial DB (used by docker-compose for db service)
MYSQL_ROOT_PASSWORD=change_this_root_password
MYSQL_DATABASE=taskomania
MYSQL_USER=user
MYSQL_PASSWORD=change_this_user_password

# phpMyAdmin (optional)
PMA_HOST=db
PMA_USER=root
PMA_PASSWORD=change_this_root_password

# Azure OpenAI configuration (replace values with your deployment/key)
AZURE_OPENAI_ENDPOINT=https://your-azure-endpoint.cognitiveservices.azure.com/
AZURE_OPENAI_KEY=your_azure_api_key_here
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# App environment
APP_ENV=local
